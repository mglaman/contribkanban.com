{#
/**
 * @file
 * Theme override to display a region.
 *
 * Available variables:
 * - content: The content for this region, typically blocks.
 * - attributes: HTML attributes for the region <div>.
 * - region: The name of the region variable as defined in the theme's
 *   .info.yml file.
 *
 * @see template_preprocess_region()
 */
#}
{% if content %}
  <div{{ attributes.addClass('app-header', 'navbar', 'is-info') }}>
    <div class="container is-fluid" style="display: flex !important;">
      <i class="fa fa-bars fa-1x" data-drupal-selector="app-siderbar-trigger"></i>
      {{ content }}
    </div>
  </div>
{% endif %}
